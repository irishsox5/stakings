<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Relationship #<%= @relationship.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Investor</dt>
              <dd><%= @relationship.investor_id %></dd>

              <dt>Investment</dt>
              <dd><%= @relationship.investment_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), relationships_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_relationship_path(@relationship), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @relationship, method: :delete, data: { confirm: "Do you really want to delete this relationship?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->

